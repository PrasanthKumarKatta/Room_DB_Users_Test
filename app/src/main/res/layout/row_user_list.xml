<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/user_id_list"
            android:text="123"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/user_list_textsize_15sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:id="@+id/user_firstName_list"
            android:text="Katta Prasanth Kumar"
            android:gravity="start"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="@dimen/user_list_textsize_15sp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:id="@+id/user_edit_img_list"
            android:background="@drawable/user_profile_edit"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
